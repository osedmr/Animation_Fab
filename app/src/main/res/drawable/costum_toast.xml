<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Çerçeve (dış sınır) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ABA5A5"/> <!-- Gri renk -->
            <corners android:radius="30dp"/> <!-- Radius ayarı -->
        </shape>
    </item>

    <!-- Arka Plan -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#64DD17"/> <!-- Arka plan rengi -->
            <corners android:radius="30dp"/> <!-- İç köşe radius -->
        </shape>
    </item>
</layer-list>